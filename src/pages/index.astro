  <!-- Script for Location Functionality -->
  <script>
      // 1. Real-time Open/Closed Logic
      function updateStatus() {
          const now = new Date();
          const hour = now.getHours();
          const day = now.getDay(); // 0 = Sunday
          const statusEl = document.getElementById('shop-status');
          const dotEl = statusEl?.querySelector('span');
          const textEl = statusEl?.querySelector('span:last-child');

          if (!statusEl || !dotEl || !textEl) return;

          // Jam Buka: 08.00 - 16.30
          const isOpen = hour >= 8 && hour < 17 && !(hour === 16 && now.getMinutes() > 30);

          if (isOpen) {
              statusEl.className = "inline-flex items-center gap-2 px-4 py-2 rounded-full text-sm font-bold bg-green-100 text-green-700 mb-6 transition-colors duration-500 animate-pulse";
