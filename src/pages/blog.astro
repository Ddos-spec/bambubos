---
import Layout from '../layouts/Layout.astro';
const posts = Object.values(import.meta.glob('./blog/*.md', { eager: true }));
---

<Layout title="Blog">
  <section class="bg-emerald-800 text-white py-12 px-4 text-center">
    <h1 class="text-4xl font-bold font-serif">Blog & Artikel</h1>
    <p class="mt-4 text-emerald-100">Tips, inspirasi, dan informasi seputar dunia bambu.</p>
  </section>

  <section class="container mx-auto px-4 py-12">
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {posts.map(post => (
        <a href={post.url} class="block bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition group">
          <div class="h-48 bg-gray-300 relative overflow-hidden">
             <img src={post.frontmatter.image || '/images/blog-default.jpg'} alt={post.frontmatter.title} class="w-full h-full object-cover group-hover:scale-105 transition duration-500" />
          </div>
          <div class="p-6">
            <h2 class="text-xl font-bold mb-2 text-emerald-900">{post.frontmatter.title}</h2>
            <p class="text-gray-600 line-clamp-3">{post.frontmatter.description}</p>
            <span class="text-emerald-600 font-bold mt-4 block group-hover:text-emerald-800">Baca Selengkapnya &rarr;</span>
          </div>
        </a>
      ))}
    </div>
  </section>
</Layout>